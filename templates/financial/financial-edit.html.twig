{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid">

        <!-- operationPUpdateModal -->


        <!-- operationMUpdate Modal -->
        <div class="modal fade" id="operationMUpdateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Operation Minus Update</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12" style="height: 10vh">
                {{ render(controller('App\\Controller\\FinancialController::navbarAction', {'idA': datas.account.id, 'page': 'edit'})) }}
            </div>
            <div class="col-12">
                <table id="" class="table table-striped table-bordered text-center font-weight-bold" style="width:100%">
                    <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Balance</th>
                        <th>Balance At Month Start</th>
                        <th>Interest Draft</th>
                        <th>Overdraft</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ datas.account.libelle }}</td>
                        <td>{{ datas.account.type }}</td>
                        <td>{{ datas.account.balance }}</td>
                        <td>{{ datas.account.atFirstBalance }}</td>
                        <td>{{ datas.account.interestDraft }}</td>
                        <td>{{ datas.account.overdraft }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-6">
                <table id="" class="table table-hover table-bordered text-center" style="width:100%">
                    <caption>List of credit operations</caption>
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Datetime</th>
                        <th>Sum</th>
                        <th>Debitted</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for operation in datas.operationsP %}
                    <tr>
                        <td>{{ operation.libelle }}</td>
                        <td>{{ operation.datetime|date('Y-m-d H:i:s') }}</td>
                        <td class="font-weight-bold">{{ operation.sum }}</td>
                        {% if operation.isCredit == 1 %}
                            <td>Yes</td>
                        {% else %}
                            <td>No</td>
                        {% endif %}
                        <td>
                            <a role="button" style="color: black !important;" data-toggle="modal" data-target="#operationPUpdateModal"><span><i class="fas fa-edit"></i></span></a>
                            <a href="{{ path('financial_invalidate_operation_plus', {'idA': datas.account.id, 'idO': operation.id}) }}" style="color: black !important;"><span><i class="fas fa-times ml-2"></i></span></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-6">
                <table id="" class="table table-hover table-bordered text-center">
                    <caption>List of debit operations</caption>
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Datetime</th>
                        <th>Sum</th>
                        <th>Debitted</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for operation in datas.operationsM %}
                        <tr>
                            <td>{{ operation.libelle }}</td>
                            <td>{{ operation.datetime|date('Y-m-d H:i:s') }}</td>
                            <td class="font-weight-bold">{{ operation.sum }}</td>
                            {% if operation.isDebit == 1 %}
                                <td>Yes</td>
                            {% else %}
                                <td>No</td>
                            {% endif %}
                            <td>
                                <a role="button" style="color: black !important;" data-toggle="modal" data-target="#operationMUpdateModal"><span><i class="fas fa-edit"></i></span></a>
                                <a href="{{ path('financial_invalidate_operation_minus', {'idA': datas.account.id, 'idO': operation.id}) }}" style="color: black !important;"><span><i class="fas fa-times ml-2"></i></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}